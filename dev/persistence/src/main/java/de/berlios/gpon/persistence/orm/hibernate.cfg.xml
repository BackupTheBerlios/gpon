<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://testrechner/gpon</property>
        <!--property name="connection.url">jdbc:oracle:thin:@127.0.0.1:1521:swdb</property-->
        <property name="connection.username">gpon</property>
        <property name="connection.password">gpon</property>
        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        <!--property name="transaction.manager_lookup_class">org.springframework.orm.hibernate3.LocalTransactionManagerLookup</property-->
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>
        <property name="jdbc.batch_size">0</property>
        <!-- Drop and re-create the database schema on startup -->
        <!--
        <property name="hbm2ddl.auto">create</property>
        -->
        <mapping resource="net/sf/gpon/persistence/ItemType.hbm.xml"/>
        <mapping resource="net/sf/gpon/persistence/ItemPropertyDecl.hbm.xml"/>
        <mapping resource="net/sf/gpon/persistence/AssociationType.hbm.xml"/>
        <mapping resource="net/sf/gpon/persistence/Association.hbm.xml"/>
        <mapping resource="net/sf/gpon/persistence/ItemProperty.hbm.xml"/>
        <mapping resource="net/sf/gpon/persistence/Item.hbm.xml"/>
      </session-factory>

</hibernate-configuration>