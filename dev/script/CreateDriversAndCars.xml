<GponScript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            xmlns="http://berlios.de/gpon/xmlscript"
            xsi:noNamespaceSchemaLocation="../xml/xsd/gponscript.xsd" >
	<Processing>
		<Commit>auto</Commit>
		<Results>
			<Smtp/>
		</Results>
	</Processing>
